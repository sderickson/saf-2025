http://{$DOMAIN}, http://api.{$DOMAIN}, http://api.specs.{$DOMAIN} {
	# Add unique request ID header to all requests
	header {
		+X-Request-ID {http.request.uuid}
	}

	# Minimal logging configuration - only errors and warnings
	log {
		level ERROR
		format console
	}

	# Route matchers
	@auth {
		host api.{$DOMAIN}
		path /auth*
	}
	@api {
		host api.{$DOMAIN}
		not path /auth*
	}
	@specs {
		host api.specs.{$DOMAIN}
	}

	handle @auth {
		reverse_proxy services-auth:3000 {
			header_up X-Request-ID {http.request.uuid}
		}
	}

	handle @api {
		forward_auth services-auth:3000 {
			uri /auth/verify
			header_up X-Request-ID {http.request.uuid}
		}
		reverse_proxy services-api:3000 {
			header_up X-Request-ID {http.request.uuid}
		}
	}

	handle @specs {
		reverse_proxy specs-apis:3000 {
			header_up X-Request-ID {http.request.uuid}
		}
	}

	handle {
		{$DISABLE_VITE_DEV_SERVER} reverse_proxy clients:5173
	}
}
