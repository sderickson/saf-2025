{
  "name": "@saf-2025/deploy-instance",
  "scripts": {
    "dev": "docker compose --env-file .env.dev -f docker-compose.base.yaml -f docker-compose.dev.yaml up --watch",
    "prod": "docker compose --env-file .env.prod -f docker-compose.prod.yaml up",
    "test": "docker compose --env-file .env.test -f docker-compose.base.yaml -f docker-compose.test.yaml up",
    "prod-local": "docker compose --env-file .env.prod-local -f docker-compose.base.yaml -f docker-compose.prod.yaml up",
    "build-and-push": "cd ../.. && ./deploy/instance/build-and-push.sh"
  }
}